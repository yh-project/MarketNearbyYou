<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:weightSum="10"
    android:gravity="center">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이메일"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/text_email"
                android:layout_marginTop="10dp"
                android:hint="이메일"
                android:inputType="text"/>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가게 이름"
                app:layout_constraintTop_toBottomOf="@+id/input_email"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/text_name"
                android:layout_marginTop="10dp"
                android:hint="가게 이름"
                android:inputType="text"/>

            <TextView
                android:id="@+id/text_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                app:layout_constraintTop_toBottomOf="@+id/input_name"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/input_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/text_pwd"
                android:layout_marginTop="10dp"
                android:hint="비밀번호"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/text_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                app:layout_constraintTop_toBottomOf="@+id/input_pwd"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/input_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/text_check"
                android:layout_marginTop="10dp"
                android:hint="비밀번호 확인"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/text_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가게 위치"
                app:layout_constraintTop_toBottomOf="@+id/input_check"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/pick_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/text_place"
                android:layout_marginTop="10dp"
                android:text="가게 찾기" />

            <Button
                android:id="@+id/signup"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="회원가입"
                app:layout_constraintTop_toBottomOf="@id/pick_place"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sendmail"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/sendmail"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="인증메일 전송"
                app:layout_constraintTop_toBottomOf="@id/pick_place"
                app:layout_constraintStart_toEndOf="@+id/signup"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>